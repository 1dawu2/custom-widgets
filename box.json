{
    "id": "com.box.htg",
    "version": "1.0.0",
    "name": "BoxHTG",
    "description": "A colored box",
    "newInstancePrefix": "ColoredBox",
    "icon": "https://1dawu2.github.io/custom-widgets/icon.png",
    "vendor": "IFM",
    "eula": "",
    "license": "",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-box-htg-main",
            "url": "https://1dawu2.github.io/custom-widgets/box.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-box-htg-styling",
            "url": "https://1dawu2.github.io/custom-widgets/box_styling.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "builder",
            "tag": "com-box-htg-builder",
            "url": "https://1dawu2.github.io/custom-widgets/box_builder.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "source": {
            "type": "string",
            "description": "Returns the Data Source.",
            "default": "Table_1;"            
        },
        "color": {
            "type": "string",
            "description": "Background color",
            "default": "black"
        },
        "opacity": {
            "type": "number",
            "description": "Opacity",
            "default": 1
        },
        "width": {
            "type": "integer",
            "default": 250
        },
        "height": {
            "type": "integer",
            "default": 250
        }
    },
    "methods": {       
        "setSource": {
            "description": "Set Data Source based on table",
            "parameters": [
                {                    
                    "name": "newsource",
                    "type": "Table",
                    "description": "Set Data Source based on table"
                }
            ],
            "body": "this.source = newsource;"
        }, 
        "getColor": {
            "returnType": "string",
            "description": "Returns the background color.",
            "body": "return this.color;"
        },              
        "setColor": {
            "description": "Sets the background color.",
            "parameters": [
                {
                    "name": "newColor",
                    "type": "string",
                    "description": "The new background color"
                }
            ],
            "body": "this.color = newColor;"
        }

    },
    "events": {
        "onClick": {
            "description": "Called when the user clicks the Colored Box."
        }
    },
    "imports": ["table", "input-controls"]
}